packages:
  yum:
    mysql-server: []
services:
  sysvinit:
    mysqld:
      enabled: true
      ensureRunning: true
files:
  "/etc/my.cnf":
    mode: "000644"
    owner: root
    group: root
    content: |
      [mysqld]
      bind-address = 0.0.0.0 default_authentication_plugin=mysql_native_password
container_commands:
  01_create_db:
    command: "mysql -u root -e 'CREATE DATABASE IF NOT EXISTS peachblossom;'"
  02_create_user:
    command: "mysql -u root -e \"CREATE USER IF NOT EXISTS 'youngre511'@'%' IDENTIFIED BY 'rozzo1-cyzjeq-tarxYh';\""
  03_grant_privileges:
    command: "mysql -u root -e \"GRANT ALL PRIVILEGES ON peachblossom.* TO 'youngre511'@'%';\""
  04_flush_privileges:
    command: "mysql -u root -e 'FLUSH PRIVILEGES;'"